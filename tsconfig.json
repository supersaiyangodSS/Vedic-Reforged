{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "allowJs": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "types": ["node", "express"],
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}